@using WEBAPP.MVC.Modulos.RecursosHumanos.Models
@model IEnumerable<FuncaoModel>

<br />
<br />
<div class="container p-4 border" style="background-color:#CEECF2;">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Funções</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Cadastrar" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Cadastrar nova função
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Função
                </th>
                <th>
                    Salário
                </th>
                <th>
                    Número de funcionários
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.NomeFuncao
                    </td>
                    <td>
                        @item.Salario.ToString("c")
                    </td>
                    <td>
                        @item.NumeroFuncionarios
                    </td>
                    <td>
                        <a asp-action="Atualizar" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Detalhes" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>