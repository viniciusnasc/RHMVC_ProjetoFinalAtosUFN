@using WEBAPP.MVC.Modulos.RecursosHumanos.Models
@model IEnumerable<FuncionarioModel>

@{
    ViewData["Title"] = "Funcionários";
}

<br />
<br />
<div class="container p-4 border" style="background-color:#CEECF2;">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Funcionarios</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Cadastrar" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Cadastrar novo funcionario
            </a>
        </div>
    </div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Foto
                </th>
                <th>
                    Registro
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Departamento
                </th>
                <th>
                    Função
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/imagens/@item.FotoPerfil" alt="@item.FotoPerfil" style="width: 70px; height:100px" />
                    </td>
                    <td>
                        @item.Registro
                    </td>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Departamento
                    </td>
                    <td>
                        @item.Funcao
                    </td>
                    <td>
                        <a asp-action="Atualizar" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Detalhes" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="GerarDoc" class="btn btn-danger">Exportar</a>
</div>