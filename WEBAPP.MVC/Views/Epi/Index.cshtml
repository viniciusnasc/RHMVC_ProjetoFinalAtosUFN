@using WEBAPP.MVC.Models.EstoqueModels
@model IEnumerable<EpiViewModel>

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <br />
    <br />
    <div class="row pb-2">
        <input type="button" class="btn-primary" value="epi"/>
        <button onclick="location.href='@Url.Action("Estoque","Home")'">Uniformes</button>
        <button onclick="location.href='@Url.Action("Estoque","Home")'">Almoxarifado</button>
    </div>
    <div class="container p-4 border" style="background-color:#CEECF2;">
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">EPI's</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="Cadastrar" class="btn btn-outline-primary">
                    <i class="fas fa-plus"></i>Cadastrar epi
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        CA
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        Quantidade
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            @item.CA
                        </td>
                        <td>
                            @item.Valor
                        </td>
                        <td>
                            @item.Quantidade
                        </td>
                        <td>
                            <a asp-action="Atualizar" class="btn btn-success" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Detalhes" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>