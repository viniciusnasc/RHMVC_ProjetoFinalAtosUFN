@using WEBAPP.MVC.Models
@model IEnumerable<FuncionarioModel>

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Funcionarios</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Cadastrar" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Cadastrar novo funcionario
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Registro
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Departamento
                </th>
                <th>
                    Função
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Registro
                    </td>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Departamento
                    </td>
                    <td>
                        @item.Funcao
                    </td>
                    <td>
                        <a asp-action="Atualizar" class ="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Detalhes" class ="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>
</html>