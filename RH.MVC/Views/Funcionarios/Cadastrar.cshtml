@model RH.Domain.Dtos.Input.FuncionarioCadastroDto

<!DOCTYPE html>
<html>
<head>
    <style>
        .ladoALado {
            display: flex;
            justify-content: space-between;
        }

        input {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="button-container">
        <input class="btn btn-secondary btn-sm" type="button" value="Voltar" onclick="location.href='@Url.Action("Index","Funcionarios")'" />
    </div>

    <h1>Cadastrar novo funcionario</h1>
    <form asp-action="Cadastrar">

        <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome"></span>

        <label asp-for="NomeSocial"></label>
        <input asp-for="NomeSocial" />
        <span asp-validation-for="NomeSocial"></span>

        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" />
        <span asp-validation-for="DataNascimento"></span>

        <label asp-for="Sexo"></label>
        <select asp-for="Sexo" asp-items="ViewBag.Sex"></select>
        <span asp-validation-for="Sexo"></span>
        </div>

        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" />
        <span asp-validation-for="Cpf"></span>

        <label asp-for="RG"></label>
        <input asp-for="RG" />
        <span asp-validation-for="RG"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>

        <label asp-for="Banco"></label>
        <input asp-for="Banco" />
        <span asp-validation-for="Banco"></span>

        <label asp-for="Agencia"></label>
        <input asp-for="Agencia" />
        <span asp-validation-for="Agencia"></span>

        <label asp-for="ContaCorrente"></label>
        <input asp-for="ContaCorrente" />
        <span asp-validation-for="ContaCorrente"></span>

        <label asp-for="Cep"></label>
        <input asp-for="Cep" />
        <span asp-validation-for="Cep"></span>

        <label asp-for="Numero"></label>
        <input asp-for="Numero" />
        <span asp-validation-for="Numero"></span>

        <label asp-for="Complemento"></label>
        <input asp-for="Complemento" />
        <span asp-validation-for="Complemento"></span>

        <label asp-for="DepartamentoId"></label>
        <select asp-for="DepartamentoId" asp-items="ViewBag.Deptos"></select>
        <span asp-validation-for="DepartamentoId"></span>

        <label asp-for="FuncaoId"></label>
        <select asp-for="FuncaoId" asp-items="ViewBag.Funcs"></select>
        <span asp-validation-for="FuncaoId"></span>

        <label asp-for="Admissao"></label>
        <input asp-for="Admissao" />
        <span asp-validation-for="Admissao"></span>

        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </div>
    </form>
</body>
</html>