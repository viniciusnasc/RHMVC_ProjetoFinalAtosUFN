@using RH.Domain.Dtos.Views
@model IEnumerable<FuncionarioFuncaoView>

<!DOCTYPE html>
<html>
<head>
    <style>
        table{
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th{
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even){
            background-color: #dddddd;
        }
    </style>
</head>

@if (@Model.ToList().Count == 0)
{
    <body>
        <h1>Não há funcionários com essa função para serem exibidos!</h1>
    </body>
}
else
{
<body>
    <div>
        <h1>Funcionarios com a função @Model.First().Funcao.NomeFuncao</h1>
    </div>

    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.Registro)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Departamento)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Registro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</body>
}
<input type="button" value="Voltar" onclick="location.href='@Url.Action("Index","Funcoes")'"
</html>